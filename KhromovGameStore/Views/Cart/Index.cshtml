@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>Total price: @ViewBag.CartPrice</p>
<table>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Operations</th>
    </tr>

    @foreach (var item in @ViewBag.Games)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                <a href="/Cart/Delete/@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
<a href="/Order/Create">Make Order</a>